<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 offset-md-2">
      <h1 class="text-center">Select your city holiday requirements</h1>
      <p class="text-center">Please select at least one option and choose as many as you like</p>
      <%= simple_form_for [@user, @requirement] do |f| %>
        <%= f.input :requirement %>
        <%= f.button :submit, class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
